{% extends 'base.html.twig' %}

{% block title %}Advertisement{% endblock %}

{% block body %}
    <h1>Advertisement</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ advertisement.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ advertisement.title }}</td>
            </tr>
            <tr>
                <th>UpdateDate</th>
                <td>{{ advertisement.updateDate ? advertisement.updateDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>IsActive</th>
                <td>{{ advertisement.isActive ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ advertisement.description }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('advertisement_index') }}">back to list</a>

    <a href="{{ path('advertisement_edit', {'id': advertisement.id}) }}">edit</a>

