{% extends 'base.html.twig' %}

{% block title %}Dog{% endblock %}

{% block body %}
    <h1>Dog</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ dog.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ dog.name }}</td>
            </tr>
            <tr>
                <th>DateOB</th>
                <td>{{ dog.dateOB ? dog.dateOB|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>History</th>
                <td>{{ dog.history }}</td>
            </tr>
            <tr>
                <th>Lof</th>
                <td>{{ dog.lof ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>AcceptCats</th>
                <td>{{ dog.acceptCats ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>AcceptDogs</th>
                <td>{{ dog.acceptDogs ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>IsAdopted</th>
                <td>{{ dog.isAdopted ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Sex</th>
                <td>{{ dog.sex ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('dog_index') }}">back to list</a>

    <a href="{{ path('dog_edit', {'id': dog.id}) }}">edit</a>

    {{ include('dog/_delete_form.html.twig') }}
{% endblock %}
