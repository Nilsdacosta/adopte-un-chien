{% extends 'base.html.twig' %}

{% block title %}Announcer index{% endblock %}

{% block body %}
    <h1>Announcer index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Password</th>
                <th>Name</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for announcer in announcers %}
            <tr>
                <td>{{ announcer.id }}</td>
                <td>{{ announcer.email }}</td>
                <td>{{ announcer.password }}</td>
                <td>{{ announcer.name }}</td>
                <td>{{ announcer.description }}</td>
                <td>
                    <a href="{{ path('announcer_show', {'id': announcer.id}) }}">show</a>
                    <a href="{{ path('announcer_edit', {'id': announcer.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('announcer_new') }}">Create new</a>
{% endblock %}
